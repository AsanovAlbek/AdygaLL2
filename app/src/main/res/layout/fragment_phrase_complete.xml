<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_91"
    android:layout_marginBottom="2dp">

    <ImageButton
        android:id="@+id/phrase_que_close_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:background="@color/gray_91"
        android:src="@drawable/close"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/phrase_que_level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/concrete"
            android:text="Уровень"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.anton46.stepsview.StepsView
            android:id="@+id/phrase_que_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/phrase_que_bottom_user_state_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082">

        <TextView
            android:id="@+id/phrase_que_task_essence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/pt_sans_bold"
            android:text="Дополните фразу:"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/phrase_que_task_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="22dp"
            android:fontFamily="@font/corbel_bold"
            android:text="Фраза на русском."
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phrase_que_answer_first_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/corbel_bold"
                android:text="Недополненная фраза"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phrase_que_answer"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="136dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/corbel_bold"
                android:text="."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/phrase_que_get_answer_button"
        android:layout_width="348dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/concrete"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:text="Ответить"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phrase_que_bottom_user_state_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.203" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phrase_que_bottom_user_state_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/gray_91"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.991">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/phrase_que_user_avatar"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/user_avatar_white_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/phrase_que_user_hp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="223dp"
            android:layout_height="29dp"
            android:max="100"
            android:progress="70"
            android:progressDrawable="@drawable/user_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.654"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.388" />

        <ProgressBar
            android:id="@+id/phrase_que_user_exp_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="223dp"
            android:layout_height="29dp"
            android:max="100"
            android:progress="40"
            android:progressDrawable="@drawable/user_progress_experience"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/phrase_que_user_hp_bar"
            app:layout_constraintStart_toStartOf="@+id/phrase_que_user_hp_bar"
            app:layout_constraintTop_toBottomOf="@+id/phrase_que_user_hp_bar"
            app:layout_constraintVertical_bias="0.23" />

        <TextView
            android:id="@+id/phrase_que_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corbel_bold"
            android:text="Username"
            android:textColor="@color/pink2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/phrase_que_user_hp_bar"
            app:layout_constraintEnd_toEndOf="@+id/phrase_que_user_hp_bar"
            app:layout_constraintStart_toStartOf="@+id/phrase_que_user_hp_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/hp_icon2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/phrase_que_user_hp_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.372" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/cup_icon2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/phrase_que_user_exp_bar"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>