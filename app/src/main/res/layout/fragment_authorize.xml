<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Authorize"
    android:background="@color/gray_91">

    <TextView
        android:id="@+id/auth_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concrete"
        android:text="LOGO"
        android:textColor="@color/orange"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <EditText
        android:id="@+id/auth_login_et"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        android:fontFamily="@font/corbel_bold"
        android:hint="   Имя пользователя"
        android:drawableLeft="@drawable/pink_main_icon2"
        android:textColorHint="@color/pink"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/auth_logo"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/auth_logo"
        app:layout_constraintTop_toBottomOf="@+id/auth_logo"
        app:layout_constraintVertical_bias="0.131" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/auth_password_et"
        android:hint="   Пароль"
        android:background="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/pink"
        android:textColor="@color/pink"
        android:fontFamily="@font/corbel_bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/auth_login_et"
        android:drawableLeft="@drawable/padlock"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/auth_sing_in_button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/auth_password_et"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Войти"
        android:fontFamily="@font/concrete"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="211dp"
        android:src="@drawable/mountains"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>